//- 01 index.pug
extends _includes/layout.pug

block head
  title Switch to Studio by MDS

//- block meta pulls in here

block content

  main
    .grid-three.grid-lines
      .grid-column-one
      .grid-column-two
      .grid-column-three

    block header
      include _includes/header.pug

    .grid-two-one.head-container
      div
        h1 Learn Efficient Design &amp; Prototyping Workflows With <span>InVision Studio<em>.</em></span>
      div
        div.instruction-tag-group.instruction-tag-group--video
          a.cta-video(href="#")
            .arrow-right.arrow-one
            .arrow-right.arrow-two
            span Watch Trailer
          .instruction-tag--line
          .instruction-tag.instruction-tag--right
            p Watch the Trailer

    .grid-three.sprint-grid
      .instruction-tag-group
        .instruction-tag
          p Start the Course
        .instruction-tag--line
      a(href="/sprint") 01<em>.</em>
          img(src="_assets/img/sprint-1-illustration.png" alt="app screen illustrations")
          h2 Get started fast with InVision Studio
          h4 5 Videos
      a(href="#") 02<em>.</em>
        img(src="_assets/img/sprint-2-illustration.png" alt="app screen illustrations")
        h2 Interface design for a conceptual iOS app
        h4 5 Videos
      a(href="#") 03<em>.</em>
        img(src="_assets/img/sprint-3-illustration.png" alt="app screen illustrations")
        h2 Custom iOS app screen transitions
        h4 5 Videos
      a(href="#") 04<em>.</em>
        img(src="_assets/img/sprint-4-illustration.png" alt="app screen illustrations")
        h2 Exploring animations in low fidelity
        h4 7 Videos

    block notified
      include _includes/notified.pug

    block foot
      include _includes/foot.pug

  block scripts
    script(src='_scripts/index.js')



